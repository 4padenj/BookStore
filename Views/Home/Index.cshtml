@{
    ViewData["Title"] = "Home Page";
}
@model BookListViewModel


<div class="container">
    
    @foreach (Book b in Model.Books)
    {
        <partial name="BookSummary" model="b" />
    }

    <div page-model="@Model.PagingInfo" action="Index" page-class-enabled="true" 
         page-class="btn" page-class-normal="btn-outline-info" page-class-selected="btn-info" 
         page-url-category ="@Model.CurrentCategory"
         class="btn-group pull-right m-1"></div>

</div>

